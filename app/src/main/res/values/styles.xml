<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#393939</item>
        <item name="colorPrimaryDark">#393939</item>
        <item name="colorAccent">#393939</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight">1px</item>

        <item name="android:titleTextStyle">@style/AppTheme</item>
        <item name="titleTextStyle">@style/AppTheme</item>

    </style>
    <style name="toastTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem" />

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem"/>

</resources>
