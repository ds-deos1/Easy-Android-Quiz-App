<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#343a40"
    android:layout_width="fill_parent">
    <ScrollView android:id="@+id/sv"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/mixture"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/customshape_1"
                android:gravity="center"
                android:text="Mixture or Alligation"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/area"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/customshape_2"
                android:gravity="center"
                android:text="Area"
                android:textColor="#393939"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/average"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/customshape_3"
                android:gravity="center"
                android:text="Average"
                android:textColor="#393939"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/boats"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginTop="200dp"
                android:background="@drawable/customshape_4"
                android:gravity="center"
                android:text="Boats and Streams"
                android:textColor="#393939"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/di"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/customshape_5"
                android:gravity="center"
                android:text="Data Interpretation"
                android:textColor="#393939"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/hcf"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/customshape_6"
                android:gravity="center"
                android:text="HCF/LCM"
                android:textColor="#393939"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/part"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="500dp"
                android:background="@drawable/customshape_7"
                android:gravity="center"
                android:text="Partnership"
                android:textColor="#263238"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/percentage"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="500dp"
                android:background="@drawable/customshape_8"
                android:gravity="center"
                android:text="Percentage"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/pipes"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="650dp"
                android:background="@drawable/customshape_9"
                android:gravity="center"
                android:text="Pipes and Cisterns"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/ages"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginTop="650dp"
                android:background="@drawable/customshape_10"
                android:gravity="center"
                android:text="Problems on Ages"
                android:textColor="#393939"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/profit"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="800dp"
                android:background="@drawable/customshape_11"
                android:gravity="center"
                android:text="Profit and Loss"
                android:textColor="#393939"
                app:layout_constraintHorizontal_bias="0.20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/interest"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="800dp"
                android:background="@drawable/customshape_12"
                android:gravity="center"
                android:text="Simple Interest"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/work"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="950dp"
                android:background="@drawable/customshape_13"
                android:gravity="center"
                android:text="Time and Work"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <Button
                android:id="@+id/volume"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="950dp"
                android:background="@drawable/customshape_14"
                android:gravity="center"
                android:text="Volume"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        android:layout_alignParentBottom="true"
        app:adUnitId="@string/admob_banner_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>